package com.minori.hrm.validators;

import org.springframework.stereotype.Component;

import com.minori.hrm.exception.HrmException;
import com.minori.hrm.request.CreateTimeOffRequest;
import com.minori.hrm.utils.CodeEnum;

@Component
public class TimeOffValidate{
	
	public void validateCreateTimeOff(CreateTimeOffRequest request) throws HrmException {
		
		if (null == request.getRequestType()) {
			throw new HrmException(CodeEnum.ERROR);
		}
		if (null == request.getStartLeaveDate() || null == request.getEndLeaveDate() || request.getStartLeaveDate() > request.getEndLeaveDate()) {
			throw new HrmException(CodeEnum.ERROR);
		}
		if (null == request.getReasonDes()) {
			throw new HrmException(CodeEnum.ERROR);
		}
	}
	
}
